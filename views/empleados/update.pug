extends ../layout
block content
    a(href='/empleados') volver
    .container.col-md-4
        form(action=`/empleados/${empleado.code}/update` method="post")
            .form-group.row
                label.col-sm-2.col-form-label(for='id') ID
                .col-sm-10
                    input#id.form-control(type='text' name="id" value= empleado.code)
            .form-group.row
                label.col-sm-2.col-form-label(for='inputapellido') Apellido
                .col-sm-10
                    input#inputapellido.form-control(type='text' name="apellido" value= empleado.apellido)
            .form-group.row
                label.col-sm-2.col-form-label(for='inputnombre') Nombre
                .col-sm-10
                    input#inputnombre.form-control(type='text' name='nombre' value = empleado.nombre)
            .form-group.row
                label.col-sm-2.col-form-label(for='inputdni') DNI
                .col-sm-10
                    input#inputdni.form-control(type='text' name="dni" value= empleado.dni)
            .form-group.row
                label.col-sm-2.col-form-label(for='inputdir') Direccion
                .col-sm-10
                    input#inputdir.form-control(type='text' name="direccion" value= empleado.direccion)
            .form-group.row
                label.col-sm-2.col-form-label(for='inputpuesto') Puesto
                .col-sm-10
                    input#inputpuesto.form-control(type='text' name="puesto" value= empleado.puesto)
        
            button.btn.btn-primary(type='submit', value="OK") Modificar